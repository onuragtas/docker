  php81_xdebug:
      image: hakanbaysal/php8.1-fpm-xdebug
      tty: true
      container_name: php81_xdebug
      restart: always
      links:
        - global
      environment:
        XDEBUG_PORT: ${XDEBUG_PORT}
        XDEBUG_HOST: ${XDEBUG_HOST}
