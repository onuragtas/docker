      - ${PROJECT_DEFAULT_PATH}:/var/www/html/
      - ./global:/global
    networks:
      net:

  php71:
    image: onuragtas/php7.1-fpm
    tty: true
    container_name: php71
    restart: always
    links:
      - global
    environment:
      PHP_IDE_CONFIG: ${PHP_IDE_CONFIG}
